{
  "name": "nest-next-app",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Kyle McCarthy",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon src/main.ts",
    "build:clean": "rm -rf .next",
    "build:server": "npx tsc --project tsconfig.server.json && npx babel .next/production-server -d .next/production-server --config-file ./.babelrc-server --extensions \".js\"",
    "build:ui": "npx next build",
    "build": "yarn build:clean && yarn build:server && yarn build:ui",
    "start": "NODE_ENV=production node --require reflect-metadata .next/production-server/main.js"
  },
  "dependencies": {
    "@babel/core": "^7.3.4",
    "@nestjs/common": "^5.7.4",
    "@nestjs/core": "^5.7.4",
    "cache-manager": "^2.9.0",
    "dotenv": "^7.0.0",
    "joi": "^14.3.1",
    "nest-next": "0.5",
    "next": "8",
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.4.0",
    "tslint-react": "^3.6.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/plugin-proposal-class-properties": "^7.3.4",
    "@babel/plugin-proposal-decorators": "^7.3.0",
    "@babel/polyfill": "^7.2.5",
    "@babel/preset-env": "^7.3.4",
    "@babel/preset-typescript": "^7.3.3",
    "@nestjs/testing": "^5.7.4",
    "@types/dotenv": "^6.1.0",
    "@types/jest": "^24.0.11",
    "@types/joi": "^14.3.2",
    "@types/next": "^8.0.1",
    "@zeit/next-typescript": "^1.1.1",
    "babel-plugin-module-resolver": "^3.2.0",
    "jest": "^24.5.0",
    "nodemon": "^1.18.10",
    "ts-jest": "^24.0.0",
    "ts-node": "^8.0.3",
    "tsconfig-paths": "^3.8.0",
    "tslint": "^5.14.0",
    "typescript": "^3.3.3333"
  },
  "jest": {
    "moduleNameMapper": {
      "^@server/(.*)$": "<rootDir>/src/$1"
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".spec.ts$",
    "coverageDirectory": "./coverage",
    "preset": "ts-jest/presets/js-with-ts",
    "testMatch": null
  }
}
